{% macro diff_hunk_line(line) %}
{% if line.is_added %}
{% set type = "addition" %}
{% elif line.is_removed %}
{% set type = "deletion" %}
{% else %}
{% set type = "context" %}
{% endif %}
<tr>
  <td class="blob-num blob-num-{{ type }}">{{ line.source_line_no or "" }}</td>
  <td class="blob-num blob-num-{{ type }}">{{ line.target_line_no or "" }}</td>
  <td class="blob-code blob-code-{{ type }}">
    <span class="blob-code-inner">{{ line.value|escape }}</span>
  </td>
</tr>
{% endmacro %}
